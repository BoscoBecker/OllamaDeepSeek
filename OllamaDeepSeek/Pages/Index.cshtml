@page
@model ChatRequest;

@{
    ViewBag.Title = "DeepSeek chat with Ollama";
    Layout = "_Layout";
}
<div class="chat-container">
    <div class="chat-box" id="chatBox">
        @foreach (var message in Model.Messages){
            <div class="@(message.Role == "user" ? "message user" : "message assistant")">
                <i>@message.Content</i>
            </div>
        }
    </div>
    <form class="chat-form" id="chatForm" method="get">
        <input type="text" class="form-control" id="userMessage" placeholder="Enter your message..."/>
        <button type="submit" id="buttonSend" class="btn btn-primary">Send</button>
        <button type="submit" id="buttonCancel" class="btn btn-danger"  style="display: none" disabled>Cancel</button>
    </form>
</div>
